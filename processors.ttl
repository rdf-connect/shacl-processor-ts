@prefix rdfc: <https://w3id.org/rdf-connect#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.

rdfc:Validate rdfc:jsImplementationOf rdfc:Processor;
    rdfs:label "SHACL Validate Processor";
    rdfs:comment "A processor that validates incoming RDF data against a SHACL shapes graph.";
    rdfc:file <./lib/index.js>;
    rdfc:class "Validate";
    rdfc:entrypoint <./>.

[ ] a sh:NodeShape;
    sh:targetClass rdfc:Validate;
    sh:property [
        sh:datatype xsd:string;
        sh:path rdfc:shaclPath;
        sh:name "shaclPath";
        sh:maxCount 1;
        sh:minCount 1;
    ], [
        sh:class rdfc:Reader;
        sh:path rdfc:incoming;
        sh:name "incoming";
        sh:maxCount 1;
       sh:minCount 1;
    ], [
        sh:class rdfc:Writer;
        sh:path rdfc:outgoing;
        sh:name "outgoing";
        sh:maxCount 1;
        sh:minCount 1;
    ], [
        sh:class rdfc:Writer;
        sh:path rdfc:report;
        sh:name "report";
        sh:maxCount 1;
    ], [
        sh:datatype xsd:boolean;
        sh:path rdfc:validationIsFatal;
        sh:name "validationIsFatal";
        sh:maxCount 1;
    ], [
        sh:datatype xsd:string;
        sh:path rdfc:mime;
        sh:name "MIME type";
        sh:maxCount 1;
    ].

