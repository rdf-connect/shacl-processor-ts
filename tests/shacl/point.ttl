@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

[] a sh:NodeShape;
    sh:targetClass <point>;
    sh:property [
        sh:path <x>;
        sh:name "X-coordinate";
        sh:datatype xsd:integer;
        sh:minCount 1;
        sh:maxCount 1;
    ].
